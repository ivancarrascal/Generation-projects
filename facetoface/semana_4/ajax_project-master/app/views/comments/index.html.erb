<h1> Comments Index</h1>
<button class="action-button" id="reload-button">Reload!</button>
<ul>
	<% @comments.each do |comment| %>
		<li><%=comment.author %> says: <%=comment.text %></li>
	<% end %>
</ul>

<label for="author">Author:</label>
<input type="text" id="author">

<label for="text">Comment</label>
<textarea id="text">Write your comment...</textarea>

<button id="commentButton">Add comment</button>